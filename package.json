{
    "name": "@my-scope/package-name",
    "version": "0.1.0",
    "author": "me",
    "config": {
        "scope": "my-scope",
        "name": "package-name",
        "location": "us-central1",
        "repository": "my-scope",
        "project": "my-project"
    },
    "description": "This package is great c:",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "scripts": {
        "test": "mocha",
        "postinstall": "npm run build",
        "build": "tsc --project ./tsconfig.json",
        "schema:build": "typescript-json-schema ./tsconfig.json * --out dist/schema.json",
        "artifactregistry:login": "npx google-artifactregistry-auth",
        "npmrc:build": "gcloud artifacts print-settings npm --scope=@my-scope --location=us-central1 --repository=my-scope --project my-project > .npmrc",
        "npmrc:login": "npx google-artifactregistry-auth .npmrc",
        "prepublishOnly": "npm run build:npmrc && npm run artifactregistry:login"
    },
    "keywords": [
        "typescript"
    ],
    "devDependencies": {
        "@types/mocha": "^9.0.0",
        "@types/should": "^13.0.0",
        "mocha": "^9.1.1",
        "readline-sync": "^1.4.10",
        "should": "^13.2.3",
        "ts-node": "^10.2.1",
        "tslint": "^6.1.3",
        "typescript": "^4.4.3",
        "typescript-json-schema": "^0.51.0"
    }
}